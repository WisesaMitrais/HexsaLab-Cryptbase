<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite1"
    tools:context=".fragment.NavigationBlockchainFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/logo_size_medium"
                android:layout_height="@dimen/logo_size_medium"
                android:src="@drawable/img_under_construction_icon"/>
            <com.mitrais.innovation.cryptbase.utility.font.FontQuicksandBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This feature is still under construction !"
                android:textSize="@dimen/font_medium_small"
                android:textColor="@color/colorGrey1"
                android:layout_marginTop="@dimen/component_margin_medium"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>